{"portConfiguration" : [

	{
		"firingPort" : "Positions",
		"inputPortValues" : {
			"Positions" : [ ]
		},
		"outputPortValues" : {
			"Summary" : "(empty mesh)"
		}
	},

	/* A line with just 1 element is invalid, so this should also output an empty mesh. */
	{
		"firingPort" : "Positions",
		"inputPortValues" : {
			"Positions" : [
				{"x":0,"y":0},
			]
		},
		"outputPortValues" : {
			"Summary" : "(empty mesh)"
		}
	},

	/* 2 elements produce 1 line. */
	{
		"firingPort" : "Positions",
		"inputPortValues" : {
			"Positions" : [
				{"x":0,"y":0},
				{"x":1,"y":0},
			]
		},
		"outputPortValues" : {
			"Summary" : "Mesh containing: 2 vertices, 1 linewith first position (0, 0, 0, 1)✓ positions◻ normals◻ tangents◻ bitangents◻ texture coordinates"
		}
	},

	/* 3 elements produce 1 line (the 3rd element is ignored). */
	{
		"firingPort" : "Positions",
		"inputPortValues" : {
			"Positions" : [
				{"x":0,"y":0},
				{"x":1,"y":0},
				{"x":0,"y":1},
			]
		},
		"outputPortValues" : {
			"Summary" : "Mesh containing: 3 vertices, 1 linewith first position (0, 0, 0, 1)✓ positions◻ normals◻ tangents◻ bitangents◻ texture coordinates"
		}
	},

	/* 4 elements produce 2 lines. */
	{
		"firingPort" : "Positions",
		"inputPortValues" : {
			"Positions" : [
				{"x":0,"y":0},
				{"x":1,"y":0},
				{"x":0,"y":1},
				{"x":0,"y":0},
			]
		},
		"outputPortValues" : {
			"Summary" : "Mesh containing: 4 vertices, 2 lineswith first position (0, 0, 0, 1)✓ positions◻ normals◻ tangents◻ bitangents◻ texture coordinates"
		}
	},

]}
